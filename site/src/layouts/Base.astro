---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Kubernetes benchmark results from the K8s AI Lab' } = Astro.props;
const base = import.meta.env.BASE_URL;

const navLinks = [
  { label: 'Home', href: base },
  { label: 'Categories', href: `${base}categories/` },
  { label: 'Comparisons', href: `${base}comparisons/` },
  { label: 'About', href: `${base}about/` },
];

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-bg text-text">
    <header class="border-b border-border">
      <nav class="max-w-6xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-8">
            <a href={base} class="font-bold text-lg text-text hover:text-accent no-underline transition-colors">
              Testbed Benchmarks
            </a>
            <div class="hidden md:flex items-center gap-6">
              {navLinks.map((link) => (
                <a
                  href={link.href}
                  class:list={[
                    'text-sm no-underline transition-colors',
                    currentPath === link.href || currentPath.startsWith(link.href.replace(/\/$/, '') + '/')
                      ? 'text-accent font-semibold'
                      : 'text-text-muted hover:text-accent',
                  ]}
                >
                  {link.label}
                </a>
              ))}
            </div>
          </div>
          <div class="flex items-center gap-4">
            <span class="hidden lg:inline text-xs text-text-muted font-mono">Automated K8s Benchmarking Lab</span>
            <a
              href="https://github.com/illmadecoder/k8s-ai-cloud-testbed"
              class="text-sm text-text-muted hover:text-accent no-underline"
              target="_blank"
              rel="noopener"
            >
              GitHub
            </a>
            <button id="mobile-menu-btn" class="md:hidden text-text-muted hover:text-accent" aria-label="Toggle menu">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2 border-t border-border pt-4">
          <div class="flex flex-col gap-3">
            {navLinks.map((link) => (
              <a
                href={link.href}
                class:list={[
                  'text-sm no-underline',
                  currentPath === link.href || currentPath.startsWith(link.href.replace(/\/$/, '') + '/')
                    ? 'text-accent font-semibold'
                    : 'text-text-muted hover:text-accent',
                ]}
              >
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </nav>
    </header>
    <slot name="breadcrumb" />
    <main class="max-w-6xl mx-auto px-6 py-8 w-full flex-1">
      <slot />
    </main>
    <footer class="mt-auto border-t border-border">
      <div class="max-w-6xl mx-auto px-6 py-6 text-center text-sm text-text-muted">
        <p>
          Built with <a href="https://astro.build" class="hover:text-accent" target="_blank" rel="noopener">Astro</a> +
          <a href={`${base}about/`} class="hover:text-accent">experiment-operator</a>
        </p>
        <p class="mt-1">
          <a
            href="https://github.com/illmadecoder/k8s-ai-cloud-testbed"
            class="hover:text-accent"
            target="_blank"
            rel="noopener"
          >
            github.com/illmadecoder/k8s-ai-cloud-testbed
          </a>
        </p>
      </div>
    </footer>
    <script is:inline>
      (function () {
        var btn = document.getElementById('mobile-menu-btn');
        var menu = document.getElementById('mobile-menu');
        if (btn && menu) {
          btn.addEventListener('click', function () {
            menu.classList.toggle('hidden');
          });
        }
      })();
    </script>
  </body>
</html>
