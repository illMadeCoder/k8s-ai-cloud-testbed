---
interface Props {
  id: string;
  name: string;
  description: string;
  experimentCount: number;
}

const { id, name, description, experimentCount } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<a href={`${base}projects/${id}/`} class="block bg-bg-card border border-border rounded p-6 shadow hover:shadow-lg transition-shadow no-underline group">
  <div class="flex items-center justify-between mb-3">
    <h3 class="text-lg font-semibold text-text group-hover:text-accent transition-colors">{name}</h3>
    {experimentCount > 0 && (
      <span class="text-xs font-mono text-text-muted bg-bg-surface px-2 py-1 rounded">
        {experimentCount} {experimentCount === 1 ? 'experiment' : 'experiments'}
      </span>
    )}
  </div>
  <p class="text-sm text-text-muted leading-relaxed">{description}</p>
  {experimentCount === 0 && (
    <p class="text-xs text-text-muted mt-3 italic">Coming soon</p>
  )}
</a>
