---
import type { CapabilitiesMatrix } from '../types';

interface Props {
  matrix: CapabilitiesMatrix;
}

const { matrix } = Astro.props;
---

<details class="section section-capabilities">
  <summary class="section-title">Capabilities Matrix</summary>

  <div class="cap-list">
    {matrix.summary && (
      <div class="cap-summary">
        <h3 class="cap-summary-title">Capabilities Summary</h3>
        <p class="cap-summary-text">{matrix.summary}</p>
      </div>
    )}

    {matrix.categories.map((category) => (
      <details class="cap-category">
        <summary class="cap-category-label">{category.name}</summary>
        <div class="cap-category-panels">
          {category.capabilities.map((cap) => (
            <div class="cap-panel">
              <div class="cap-panel-header">
                <span class="cap-panel-name">{cap.name}</span>
              </div>
              <div class="cap-panel-body">
                {matrix.technologies.map((tech) => (
                  <div class="cap-tech-card">
                    <span class="cap-tech-label">{tech}</span>
                    <p class="cap-tech-text">{cap.values[tech] || '—'}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </details>
    ))}
  </div>
</details>

<style>
  .cap-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem;
  }

  .cap-summary {
    padding: 1.25rem 1.5rem;
    background: color-mix(in srgb, var(--section-color, var(--accent)) 8%, var(--bg-card));
    border: 1px solid color-mix(in srgb, var(--section-color, var(--accent)) 30%, var(--border));
    border-left: 3px solid var(--section-color, var(--accent));
    border-radius: var(--radius);
  }

  .cap-summary-title {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--section-color, var(--accent));
    margin: 0 0 0.5rem;
  }

  .cap-summary-text {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text);
    line-height: 1.7;
  }

  .cap-category-panels {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem;
  }

  .cap-category {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .cap-category-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-muted);
    padding: 0.75rem 1rem;
    cursor: pointer;
    list-style: none;
    user-select: none;
    background: var(--bg-card);
    border-bottom: 1px solid transparent;
  }

  .cap-category[open] > .cap-category-label {
    border-bottom-color: var(--border);
  }

  .cap-category-label::-webkit-details-marker {
    display: none;
  }

  .cap-category-label::before {
    content: '▶';
    display: inline-block;
    font-size: 0.55rem;
    margin-right: 0.5rem;
    transition: transform 0.15s ease;
    vertical-align: middle;
  }

  .cap-category[open] > .cap-category-label::before {
    transform: rotate(90deg);
  }

  .cap-panel {
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .cap-panel-header {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    background: transparent;
    border-bottom: 1px solid var(--border);
  }

  .cap-panel-name {
    font-family: var(--font-mono);
    font-size: 1.05rem;
    font-weight: 600;
    background: none;
    padding: 0;
  }

  .cap-panel-body {
    display: flex;
    flex-direction: column;
    background: transparent;
  }

  .cap-tech-card {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--border);
  }

  .cap-tech-card:last-child {
    border-bottom: none;
  }

  .cap-tech-label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
    border-radius: 3px;
    padding: 0.15rem 0.5rem;
  }

  .cap-tech-text {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text);
    margin: 0.35rem 0 0;
  }

  @media (max-width: 640px) {
    .cap-list {
      padding: 0.5rem;
    }

    .cap-panel-header {
      padding: 0.5rem 0.75rem;
    }

    .cap-tech-card {
      padding: 0.5rem 0.75rem;
    }

    .cap-summary {
      padding: 0.5rem 0.75rem;
    }
  }

  @media (min-width: 768px) {
    .cap-panel-body {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }

    .cap-tech-card {
      border-bottom: none;
      border-right: 1px solid var(--border);
    }

    .cap-tech-card:last-child {
      border-right: none;
    }
  }
</style>
