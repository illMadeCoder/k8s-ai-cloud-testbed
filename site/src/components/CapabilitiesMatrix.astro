---
import type { CapabilitiesMatrix } from '../types';

interface Props {
  matrix: CapabilitiesMatrix;
}

const { matrix } = Astro.props;
---

<details class="section">
  <summary class="section-title">Capabilities Matrix</summary>

  <div class="cap-list">
    {matrix.summary && (
      <p class="cap-summary">{matrix.summary}</p>
    )}

    {matrix.categories.map((category) => (
      <Fragment>
        <div class="cap-category-label">{category.name}</div>
        {category.capabilities.map((cap) => (
          <div class="cap-panel">
            <div class="cap-panel-header">
              <span class="cap-panel-name">{cap.name}</span>
            </div>
            <div class="cap-panel-body">
              {matrix.technologies.map((tech) => (
                <div class="cap-tech-card">
                  <span class="cap-tech-label">{tech}</span>
                  <p class="cap-tech-text">{cap.values[tech] || 'â€”'}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </Fragment>
    ))}
  </div>
</details>

<style>
  .cap-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }

  .cap-summary {
    margin: 0;
    padding: 0.75rem 1rem;
    border-top: 1px solid var(--border);
    font-size: 0.9rem;
    color: var(--text);
    line-height: 1.65;
  }

  .cap-category-label {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-muted);
    padding: 0.5rem 0 0;
  }

  .cap-panel {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .cap-panel-header {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--border);
  }

  .cap-panel-name {
    font-family: var(--font-mono);
    font-size: 1.05rem;
    font-weight: 600;
    background: none;
    padding: 0;
  }

  .cap-panel-body {
    display: flex;
    flex-direction: column;
  }

  .cap-tech-card {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--border);
  }

  .cap-tech-card:last-child {
    border-bottom: none;
  }

  .cap-tech-label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
    border-radius: 3px;
    padding: 0.15rem 0.5rem;
  }

  .cap-tech-text {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text);
    margin: 0.35rem 0 0;
  }

  @media (min-width: 768px) {
    .cap-panel-body {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }

    .cap-tech-card {
      border-bottom: none;
      border-right: 1px solid var(--border);
    }

    .cap-tech-card:last-child {
      border-right: none;
    }
  }
</style>
