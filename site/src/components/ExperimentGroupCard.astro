---
import type { ExperimentGroup } from '../lib/experiments';
import { getDisplayTitle } from '../lib/experiments';
import { formatDuration, formatDate, formatCost } from '../lib/format';
import { getSeriesMeta } from '../lib/series';

interface Props {
  group: ExperimentGroup;
}

const { group } = Astro.props;
const { latest } = group;
const base = import.meta.env.BASE_URL;

const seriesId = latest.series;
const seriesName = seriesId ? getSeriesMeta(seriesId)?.name : undefined;

const verdict = latest.analysis?.hypothesisVerdict;
const verdictLabel = verdict === 'validated' ? 'Validated'
  : verdict === 'invalidated' ? 'Invalidated'
  : verdict === 'insufficient' ? 'Insufficient'
  : null;
const verdictClass = verdict === 'validated' ? 'badge-complete'
  : verdict === 'invalidated' ? 'badge-failed'
  : 'badge-running';
---

<a href={`${base}experiments/${group.baseName}/`} class="card card-link" data-tags={group.tags.join(',')}>
  <div class="card-header">
    <div class="card-header-left">
      {verdictLabel && <span class={`badge ${verdictClass}`}>{verdictLabel}</span>}
      <span class="run-count">{group.runs.length} {group.runs.length === 1 ? 'run' : 'runs'}</span>
    </div>
    <span class="card-date">{formatDate(latest.createdAt)}</span>
  </div>
  <h3 class="card-title">{getDisplayTitle(group)}</h3>
  {seriesName && (
    <div class="card-series">Part of {seriesName} series</div>
  )}
  <p class="card-desc">{latest.description}</p>
  {group.tags.length > 0 && (
    <div class="card-tags">
      {group.tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
  <div class="card-meta">
    <span>Duration: {formatDuration(latest.durationSeconds)}</span>
    <span>Targets: {latest.targets.length}</span>
    {latest.costEstimate && <span>Cost: {formatCost(latest.costEstimate.totalUSD)}</span>}
  </div>
</a>

<style>
  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }
  .card-header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .run-count {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 10%, transparent);
    padding: 0.1rem 0.5rem;
    border-radius: 999px;
  }
  .card-date {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  .card-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
    overflow-wrap: break-word;
  }
  .card-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
    line-height: 1.5;
    flex: 1;
  }
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 0.75rem;
  }
  .card-series {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }
  .card-meta {
    display: flex;
    gap: 1.5rem;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
</style>
