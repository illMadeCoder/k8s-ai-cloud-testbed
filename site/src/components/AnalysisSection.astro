---
interface Props {
  title: string;
  overview: string;
  findings?: string[];
  extras?: string[];
  extrasLabel?: string;
  accent?: 'blue' | 'green' | 'amber' | 'red';
}

const { title, overview, findings, extras, extrasLabel, accent = 'blue' } = Astro.props;

const accentColors: Record<string, string> = {
  blue: 'var(--accent)',
  green: 'var(--success)',
  amber: 'var(--warning)',
  red: 'var(--error)',
};
const color = accentColors[accent];
---

<details class="section analysis-section" style={`--section-accent: ${color}`}>
  <summary class="section-title analysis-section-title">{title}</summary>
  <p class="analysis-section-overview">{overview}</p>

  {findings && findings.length > 0 && (
    <ol class="findings-list">
      {findings.map((finding) => (
        <li>{finding}</li>
      ))}
    </ol>
  )}

  {extras && extras.length > 0 && (
    <div class="analysis-section-extras">
      {extrasLabel && <h4 class="extras-label">{extrasLabel}</h4>}
      <ul class="extras-list">
        {extras.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  )}
</details>

<style>
  .analysis-section {
    background: color-mix(in srgb, var(--section-accent) 4%, var(--bg-card));
    border: 1px solid color-mix(in srgb, var(--section-accent) 20%, var(--border));
    border-radius: var(--radius);
    padding: 1.5rem;
  }

  .analysis-section-title {
    color: var(--section-accent);
    border-bottom-color: color-mix(in srgb, var(--section-accent) 30%, var(--border));
  }

  .analysis-section-overview {
    color: var(--text);
    line-height: 1.65;
    margin-bottom: 1rem;
  }

  .findings-list {
    list-style: none;
    padding: 0;
    counter-reset: finding;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .findings-list li {
    counter-increment: finding;
    padding: 0.6rem 0.75rem 0.6rem 2.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: calc(var(--radius) - 2px);
    position: relative;
    line-height: 1.55;
    font-size: 0.9rem;
  }

  .findings-list li::before {
    content: counter(finding);
    position: absolute;
    left: 0.75rem;
    top: 0.6rem;
    width: 1.25rem;
    height: 1.25rem;
    background: var(--section-accent);
    color: #fff;
    border-radius: 50%;
    font-size: 0.7rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .analysis-section-extras {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .extras-label {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .extras-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .extras-list li {
    padding: 0.5rem 0.75rem 0.5rem 1.75rem;
    position: relative;
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .extras-list li::before {
    content: "\2192";
    position: absolute;
    left: 0.5rem;
    color: var(--section-accent);
    font-weight: 600;
  }
</style>
